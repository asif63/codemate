// backend/prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL") // e.g. mysql://root:@localhost:3306/codemate
}

model User {
  id       Int     @id @default(autoincrement())
  username String  @unique
  email    String  @unique        // keep simple; we'll let Prisma create it
  password String

  // profile
  cfHandle   String?
  lcUsername String?
  bio        String?  @db.Text

  // settings
  isPublic        Boolean @default(true)
  defaultPlatform String  @default("codeforces")
  theme           String  @default("system")

  createdAt DateTime @default(now())
  updatedAt DateTime? @updatedAt   // keep optional until we backfill

  @@map("user")                    // IMPORTANT: match existing table name
}

